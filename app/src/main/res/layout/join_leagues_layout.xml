<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/leagues_border">


    <TextView
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:text="The name of the league goes here"
        android:id="@+id/news_tv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin:"
        android:id="@+id/textview1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/pin_tv"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textview1"
        android:layout_toEndOf="@+id/textview1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/open_bn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/user_id_tv"
        android:layout_alignBottom="@+id/news_tv"
        android:layout_toRightOf="@+id/news_tv"
        android:layout_toEndOf="@+id/news_tv"
        android:textColor="#FFC8C7C7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/league_id_tv"
        android:layout_below="@+id/open_bn"
        android:layout_alignRight="@+id/open_bn"
        android:layout_alignEnd="@+id/open_bn"
        android:textColor="#FFC8C7C7" />

</RelativeLayout>