    <!-- Goalkeeper -->


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/goalkeeper2nd"
        android:src="@drawable/blackshirt"
        android:background="@null"
        android:onClick="showGkDetails"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="360dp"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/goalkeeper"
        android:src="@drawable/emptyshirt2"
        android:background="@null"
        android:onClick="getGoalkeeper"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="360dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gkSurname"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="140dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/cb1Surname"
        android:layout_above="@+id/textview"
        android:layout_alignLeft="@+id/centreBackTwoButton"
        android:layout_alignStart="@+id/centreBackTwoButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/cb2Surname"
        android:layout_alignBottom="@+id/rightBackButton"
        android:layout_alignRight="@+id/centreBackOneButton"
        android:layout_alignEnd="@+id/centreBackOneButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lbSurname"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/leftBackButton"
        android:layout_alignEnd="@+id/leftBackButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/rbSurname"
        android:layout_below="@+id/cb2Surname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/cm2Surname"
        android:layout_toEndOf="@+id/cb1Surname"
        android:layout_below="@+id/centreMidTwoButton"
        android:layout_toRightOf="@+id/cb1Surname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/cm1Surname"
        android:layout_below="@+id/centreMidOneButton"
        android:layout_alignRight="@+id/centreMidOneButton"
        android:layout_alignEnd="@+id/centreMidOneButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/rmSurname"
        android:layout_below="@+id/centreMidOneButton"
        android:layout_alignRight="@+id/rightMidButton"
        android:layout_alignEnd="@+id/rightMidButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lmSurname"
        android:layout_alignLeft="@+id/leftMidButton"
        android:layout_alignStart="@+id/leftMidButton"
        android:layout_below="@+id/centreMidTwoButton"
        android:layout_alignRight="@+id/leftMidButton"
        android:layout_alignEnd="@+id/leftMidButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lsSurname"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/rmSurname"
        android:layout_toEndOf="@+id/rmSurname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/rsSurname"
        android:layout_alignTop="@+id/lsSurname"
        android:layout_alignRight="@+id/rightStrikerButton"
        android:layout_alignEnd="@+id/rightStrikerButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/uid"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cb1Surname"
        android:layout_toEndOf="@+id/cb1Surname" />


