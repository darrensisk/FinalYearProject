<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="50dp"
    android:background="#6f6d6d">


    <TextView

        android:layout_height="50dp"
        android:layout_width="39dp"
        android:id="@+id/tx_id"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="#a1d6ed"
        android:textColor="#000000">

    </TextView>

    <TextView

        android:layout_height="50dp"
        android:layout_width="180dp"
        android:id="@+id/tx_teamname"
        android:layout_toRightOf="@+id/tx_id"
        android:text="my team name"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="#a1d6ed"
        android:textColor="#000000"
        android:layout_marginLeft="1dp">

    </TextView>


    <TextView

        android:layout_height="50dp"
        android:layout_width="49dp"
        android:id="@+id/tx_weeklypoints"
        android:layout_toRightOf="@+id/tx_teamname"
        android:text="101"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="#a1d6ed"
        android:textColor="#000000"
        android:layout_marginLeft="1dp">

    </TextView>

    <TextView

        android:layout_height="50dp"
        android:layout_width="109dp"
        android:id="@+id/tx_totalpoints"
        android:layout_toRightOf="@+id/tx_weeklypoints"
        android:text="1407"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="#a1d6ed"
        android:textColor="#000000"
        android:layout_marginLeft="1dp">

    </TextView>


</RelativeLayout>